<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yepej.greenseasons.OptionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderIDLabel"
        android:text="Order Number:"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/contactNameLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactName"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/contactNameLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceLabel"
        android:text="Total:"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/orderIDLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerName"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerNameLabel"
        android:text="Customer:"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderNumber"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/orderIDLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:layout_alignBottom="@+id/priceLabel"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactNameLabel"
        android:text="User:"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/customerNameLabel"
        android:layout_alignParentStart="true" />

</RelativeLayout>